<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUI">



        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center"
            android:id="@+id/below">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/b2"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>







    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/arid"
        android:id="@+id/back"
        android:layout_below="@+id/below" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Hamad Raza"
        android:id="@+id/name"
        android:layout_below="@+id/below"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AridNo: 18-Arid-2470"
        android:id="@+id/arid"
        android:layout_below="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degree: BSCS"
        android:id="@+id/degree"
        android:layout_below="@+id/arid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section: B(MOR)"
        android:id="@+id/section"
        android:layout_below="@+id/arid"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F.Name: Haji Atta Muhammad"
        android:id="@+id/fname"
        android:layout_below="@+id/degree" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 0234-7463521"
        android:id="@+id/phone"
        android:layout_below="@+id/fname" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:text="Email: hamadraza047@hmail.com" />



  </RelativeLayout>